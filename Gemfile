source 'https://rubygems.org'

# Ruby version
ruby '2.2.2'

# Enable file watching in Windows. See http://jekyllrb.com/docs/windows/#auto-regeneration
require 'rbconfig'
gem 'wdm', '~> 0.1.0' if RbConfig::CONFIG['target_os'] =~ /mswin|mingw/i

# Jekyll static site generator
gem 'jekyll', require: false

# Asset pipeline for minification/cache-busting
gem 'jekyll-assets'
gem 'uglifier'
gem 'autoprefixer-rails'

# Use rake to simplify tasks
gem 'rake'

# Tag cloud and per-tag pages
gem 'jekyll-tagging'
